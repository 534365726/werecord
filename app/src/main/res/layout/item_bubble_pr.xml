<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="account"
            type="xjunz.tool.wechat.impl.model.account.Account" />

        <variable
            name="message"
            type="xjunz.tool.wechat.impl.model.message.Message" />

        <variable
            name="positionType"
            type="int" />

        <import type="android.view.View" />

        <import type="xjunz.tool.wechat.impl.model.message.Edition" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:marginTop="@{positionType==2||positionType==-1?@dimen/spacing_unit:0.0f}"
        android:marginBottom="@{positionType==-1||positionType==0?@dimen/spacing_unit:0.0f}">


        <View
            android:id="@+id/divider_center"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:background="?colorAccent"
            android:visible="@{positionType!=-1}"
            app:layout_constraintBottom_toBottomOf="@+id/msg_container"
            app:layout_constraintEnd_toStartOf="@+id/iv_avatar"
            app:layout_constraintTop_toTopOf="@+id/msg_container" />

        <View
            android:id="@+id/divider_lower"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="?colorAccent"
            android:visible="@{positionType>0}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/divider_center"
            app:layout_constraintStart_toStartOf="@id/divider_center"
            app:layout_constraintTop_toBottomOf="@id/divider_center" />

        <View
            android:id="@+id/divider_upper"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="?colorAccent"
            android:visible="@{positionType==0||positionType==1}"
            app:layout_constraintBottom_toTopOf="@+id/divider_center"
            app:layout_constraintEnd_toEndOf="@id/divider_center"
            app:layout_constraintStart_toStartOf="@id/divider_center"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            style="@style/SelectableCircleImageView"
            android:layout_width="@dimen/fab_small"
            android:layout_height="@dimen/fab_small"
            android:layout_marginEnd="8dp"
            android:avatar="@{account}"
            android:invisible="@{positionType==1||positionType==2}"
            app:layout_constraintBottom_toBottomOf="@+id/msg_container"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@tools:sample/avatars" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/msg_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/z_bubble"
            android:layout_marginEnd="@dimen/spacing_unit"
            android:background="@{positionType&lt;=0?@drawable/bg_bubble_bottom_right:@drawable/bg_bubble_upper}"
            android:clickable="true"
            android:elevation="@dimen/z_bubble"
            android:focusable="true"
            android:marginBottom="@{positionType==1||positionType==2?@dimen/spacing_unit:@dimen/z_bubble}"
            android:maxWidth="@dimen/max_bubble_width"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/divider_upper"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/bg_bubble_bottom_right">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/max_bubble_width"
                android:minLines="1"
                android:paddingHorizontal="@dimen/spacing_normal"
                android:paddingVertical="@dimen/spacing_unit"
                android:text="@{message.spannedContent}"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:maxLines="10"
                tools:text="@tools:sample/lorem/random" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>