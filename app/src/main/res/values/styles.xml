<resources>

    <!-- Base application theme. -->
    <style name="Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlHighlight">@color/colorAccentWeak</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Normal</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/color_control_activate</item>
        <item name="colorControlNormal">@color/color_control_normal</item>
        <item name="colorControlActivated">@color/color_control_activate</item>
        <item name="android:textColorHighlight">?colorControlHighlight</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>
        <item name="android:navigationBarColor">?colorPrimaryDark</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Normal</item>
        <item name="buttonBarButtonStyle">@style/Widget.AppCompat.Button.Borderless.Colored.Normal
        </item>
    </style>

    <style name="Base.AppTheme">
        <item name="android:ambientShadowAlpha">.039</item>
        <item name="android:spotShadowAlpha">.089</item>
    </style>


    <style name="Base.AppTheme.Main">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">?colorPrimaryDark</item>
    </style>

    <style name="Base.AppTheme.Intro">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Base.AppTheme.Main.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.AppTheme.Main.Translucent.Message">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowEnterTransition">@transition/message_enter</item>
        <item name="android:windowSharedElementEnterTransition">@transition/message_shared_enter
        </item>
    </style>

    <style name="Base.AppTheme.Main.Translucent.Editor">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowEnterTransition">@transition/editor_enter</item>
    </style>

    <style name="Base.AppTheme.Main.Translucent.Dialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Base.AppTheme.Main.Translucent.Dialog.ImageViewer">
        <item name="android:windowBackground">@color/colorMask</item>
        <item name="android:windowSharedElementEnterTransition">
            @transition/image_viewer_shared_enter
        </item>
        <item name="android:windowSharedElementReturnTransition">
            @transition/image_viewer_shared_return
        </item>
    </style>

    <style name="Base.AppTheme.Main.Translucent.Dialog.Detail">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowEnterTransition">@transition/detail_enter</item>
        <item name="android:windowSharedElementEnterTransition">@transition/detail_shared_enter
        </item>
    </style>

    <style name="Theme.AppCompat.Light.DialogWhenLarge.Material">
        <item name="colorButtonNormal">@color/color_control_activate</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.AppCompat.Button.Normal.Flat
        </item>
        <item name="buttonBarNegativeButtonStyle">
            @style/Widget.AppCompat.Button.Borderless.Colored.Normal
        </item>
        <item name="buttonBarNeutralButtonStyle">
            @style/Widget.AppCompat.Button.Borderless.Colored.Normal
        </item>
        <item name="android:navigationBarColor">?colorPrimaryDark</item>
        <item name="android:windowAnimationStyle">@style/Sade</item>
    </style>

    <style name="SelectableCircleImageView">
        <item name="android:transitionName">@string/tn_avatar</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/bg_selectable_circle</item>
    </style>

    <style name="Base.AlertDialog"></style>

    <style name="Theme.AppCompat.Light.Dialog.Alert.Material">
        <item name="colorButtonNormal">@color/color_control_activate</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.AppCompat.Button.Normal.Flat
        </item>
        <item name="buttonBarNegativeButtonStyle">
            @style/Widget.AppCompat.Button.Borderless.Colored.Normal
        </item>
        <item name="buttonBarNeutralButtonStyle">
            @style/Widget.AppCompat.Button.Borderless.Colored.Normal
        </item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.25</item>
        <item name="android:windowAnimationStyle">@style/Sade</item>
    </style>

    <style name="Base.Dialog">
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Sade</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">.3</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Base.Dialog.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Base.Dialog.Translucent.NoDim">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Base.Dialog.Normal">
        <item name="android:windowBackground">@drawable/bg_material_dialog</item>
        <item name="android:windowElevation">@dimen/z_dialog</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- normal-sized button style (for normal usage) -->
    <style name="Widget.AppCompat.Button.Normal">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_btn</item>
    </style>

    <!-- flat button style -->
    <style name="Widget.AppCompat.Button.Normal.Flat">
        <item name="android:stateListAnimator">@animator/flat_raise</item>
    </style>

    <!-- borderless small-sized button style (such as negative dialog button) -->
    <style name="Widget.AppCompat.Button.Borderless.Colored.Normal">
        <item name="android:background">@drawable/bg_btn_borderless</item>
        <item name="android:textColor">?colorControlActivated</item>
    </style>

    <!-- flat small-sized button with frame (such as negative dialog button) -->
    <style name="Widget.AppCompat.Button.Borderless.Colored.Framed">
        <item name="android:textColor">?colorControlActivated</item>
        <item name="android:background">@drawable/bg_btn_framed</item>
    </style>


    <style name="Widget.AppCompat.Spinner.Underlined.Filter">
        <item name="android:popupElevation">@dimen/z_popup</item>
    </style>


    <!-- a "s"-cale and f-"ade" animation for window transition-->
    <style name="Sade" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="TextAppearance.AppCompat.Caption.Tag">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_tag</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.AppCompat.Caption.Tag.Framed">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:background">@drawable/bg_framed</item>
    </style>

    <style name="TextAppearance.AppCompat.Small.Chip">
        <item name="android:background">@drawable/bg_chip</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingEnd">@dimen/spacing_normal</item>
        <item name="android:paddingTop">@dimen/spacing_unit</item>
        <item name="android:paddingBottom">@dimen/spacing_unit</item>
    </style>

    <integer name="animDurationNormal">300</integer>
    <integer name="animDurationShort">200</integer>
    <integer name="animDurationLong">400</integer>
</resources>
