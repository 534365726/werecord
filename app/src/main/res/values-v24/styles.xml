<resources>

    <style name="Base.AppTheme">
        <item name="android:contextPopupMenuStyle">@style/FlatContextMenu</item>
        <item name="android:popupMenuStyle">@style/FlatContextMenu</item>
        <item name="android:ambientShadowAlpha">.039</item>
        <item name="android:spotShadowAlpha">.089</item>
    </style>

    <!--Context menu style with flattened elevation-->
    <style name="FlatContextMenu" parent="android:Widget.Material.PopupMenu">
        <item name="android:popupElevation">@dimen/z_popup</item>
        <item name="android:overlapAnchor">true</item>
        <item name="android:popupBackground">?android:colorBackgroundFloating</item>
    </style>
</resources>