<inset xmlns:android="http://schemas.android.com/apk/res/android">
    <layer-list>
        <item>
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/corner_dialog" />
                <gradient
                    android:endColor="#FDFDFD"
                    android:startColor="@android:color/white" />
            </shape>
        </item>

        <item>
            <inset
                android:insetLeft="@dimen/dp_1"
                android:insetTop="@dimen/dp_2"
                android:insetBottom="@dimen/dp_2">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/corner_dialog" />
                    <solid android:color="#FDFDFD" />
                </shape>
            </inset>
        </item>
    </layer-list>
</inset>
